{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Streamlit",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/frontend/chatBot.py",
      "args": [
        "run"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--reload"
      ],
      "console": "integratedTerminal"
    }
  ]
}